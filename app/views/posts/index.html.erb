<form action="<%= posts_url %>" method="post">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>"
    >

  <label>Title
    <br>
    <input type="text" name="post[title]" value="<%= @post.title %>">
  </label>

  <br>
  <br>

  <label>Body
    <br>
    <textarea name="post[body]" rows="8" cols="40"><%= @post.body %></textarea>
  </label>

  <br>
  <input type="submit"value="Create Post">

</form>


<ul>
  <% @posts.each do |post| %>
    <li>
      <strong>
        <a href="<%= post_url(post) %>"><%= post.title %></a>
      </strong>
      <em>by <%= post.author.name %></em>
      <p><%= post.body %></p>
    </li>
  <% end %>
</ul>
